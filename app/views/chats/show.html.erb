<p id="notice"><%= notice %></p>

<div style="padding-left: 10px;">
  <div id="messages">
    <%= render @messages %>
  </div>
</div>

<%= form_with url: '#', html: {id: 'new-message'} do |f| %>
  <%= f.hidden_field :chat_id, value: @chat.id, id: 'message-chat-id' %>
  <%= f.text_field :text, id: 'message-body' %>
<%= f.submit 'Send' %>
<% end %>
